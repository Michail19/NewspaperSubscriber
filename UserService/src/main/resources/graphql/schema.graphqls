type User {
  id: ID!
  firstName: String!
  secondName: String!
  thirdName: String
  age: Int!
  registrationDate: String!
}

input UserInput {
  firstName: String!
  secondName: String!
  thirdName: String
  age: Int!
}

type Query {
  getUser(id: ID!): User
}

type Mutation {
  addUser(input: UserInput!): User
  updateUser(id: ID!, input: UserInput!): User
  removeUser(id: ID!): Boolean
}
